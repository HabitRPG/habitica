mixin simpleAchiev(isEarned, spriteName, titleText, descText, optionalCount)
  div(popover-title='#{titleText}',
    data-popover-html='#{descText}',
    popover-trigger='mouseenter',
    popover-placement='bottom')&attributes(attributes)

    button.pet-button
      .achievement(class='#{spriteName}2x')(ng-if='::#{isEarned}')
        span.counter(ng-if='::(#{optionalCount})')
          {{#{optionalCount}}}
      .achievement(class='#{spriteName}2x-muted')(ng-if='::!(#{isEarned})')

mixin achievWithSimpleCount(countVal, spriteName, title, desc)
  +simpleAchiev(countVal, spriteName, env.t(title), env.t(desc, {count: "0"}))(ng-if='::!(#{countVal})')
  +simpleAchiev(countVal, spriteName, env.t(title), env.t(desc, {count: "{{::" + countVal + "}}"}), countVal)(ng-if='::#{countVal}')

mixin achievWithSingularPlural(countVal, spriteName, sgTitle, sgDesc, plTitle, plDesc)
  +simpleAchiev(countVal, spriteName, env.t(plTitle, {count: "{{::" + countVal + "}}"}),
    env.t(plDesc, {count: "{{::" + countVal + "}}"}), countVal)(ng-if='::#{countVal} > 1')
  +simpleAchiev(countVal, spriteName, env.t(sgTitle), env.t(sgDesc), countVal)(ng-if='::!(#{countVal} > 1)')


