each ultClass in ['healer', 'rogue', 'warrior']
  div
    .achievement(class='achievement-ultimate-#{ultClass}', ng-if='::profile.achievements.ultimateGearSets.#{ultClass}')
    div(ng-class='::{muted: !profile.achievements.ultimateGearSets.#{ultClass}}')
      h5=env.t('ultimGearName', {ultClass: env.t(ultClass)})
      small=env.t(ultClass + 'UltimGearText')
    hr

