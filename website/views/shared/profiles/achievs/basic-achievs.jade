  .achievement(class='achievement-ultimate-mage', ng-if='::profile.achievements.ultimateGearSets.wizard')
  div(ng-class='::{muted: !profile.achievements.ultimateGearSets.wizard}')
    h5=env.t('ultimGearName', {ultClass: env.t('mage')})
    small=env.t('mageUltimGearText')
  hr

div
  .achievement.achievement-sun(ng-if='::profile.achievements.rebirths')
  div(ng-class='::{muted: !profile.achievements.rebirths}')
    h5(ng-if='::!(profile.achievements.rebirths > 1)')
      =env.t('rebirthBegan')
    h5(ng-if='::profile.achievements.rebirths > 1')
      =env.t('rebirthText', {rebirths: "{{::profile.achievements.rebirths}}"})
    small(ng-if='::!profile.achievements.rebirthLevel')
      =env.t('rebirthOrbNoLevel')
    small(ng-if='::profile.achievements.rebirthLevel < 100')
      =env.t('rebirthOrb', {level: "{{::profile.achievements.rebirthLevel}}"})
    small(ng-if='::profile.achievements.rebirthLevel >= 100')
      =env.t('rebirthOrb100')
  hr
