div
  .achievement.achievement-tree(ng-if='::profile.achievements.habitSurveys')
  div(ng-class='::{muted: !profile.achievements.habitSurveys}')
    h5=env.t('helped')
    small(ng-if='::!(profile.achievements.habitSurveys > 1)')
      =env.t('surveysSingle')
    small(ng-if='::profile.achievements.habitSurveys > 1')
      =env.t('surveysMultiple', {surveys: "{{::profile.achievements.habitSurveys}}"})
  hr

div
  .achievement.achievement-helm(ng-if='::profile.backer.npc')
  div(ng-class='::{muted: !profile.backer.npc}')
    h5(ng-if='::profile.backer.npc')
      span.label.label-npc
        | {{::profile.backer.npc}}
        =env.t('npc')
    h5(ng-if='::!profile.backer.npc')
      =env.t('npc')
    small=env.t('npcText')
  hr

div
  .achievement.achievement-boot(ng-if='::profile.contributor.level')
  div(ng-class='::{muted: !profile.contributor.level}')
    h5
      span.label.label-default(ng-if='::profile.contributor.level', class='label-contributor-{{::profile.contributor.level}}') {{::contribText(profile.contributor, profile.backer)}}
      span.label.label-default(ng-if='::!profile.contributor.level')=env.t('contribName')
    small
      =env.t('contribText')
      |&nbsp;
      +aLink('http://habitica.wikia.com/wiki/Contributing_to_Habitica', env.t('readMore'))
      | .
  hr

div
  .achievement.achievement-heart(ng-if='::profile.backer.tier')
  div(ng-class='::{muted: !profile.backer.tier}')
    h5(ng-if='::profile.backer.tier')
      =env.t('kickstartName', {tier: "{{::profile.backer.tier}}"})
    h5(ng-if='::!profile.backer.tier')
      =env.t('kickstartNameNoTier')
    small=env.t('kickstartText')
  hr

div
  .achievement.achievement-cake(ng-if='::profile.achievements.veteran')
  div(ng-class='::{muted: !profile.achievements.veteran}')
    h5=env.t('veteran')
    small=env.t('veteranText')
  hr

div
  .achievement.achievement-alpha(ng-if='::profile.achievements.originalUser')
  div(ng-class='::{muted: !profile.achievements.originalUser}')
    h5=env.t('originalUser')
    small!=env.t('originalUserText')
  hr
