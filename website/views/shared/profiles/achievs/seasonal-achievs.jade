each card in ['greeting', 'thankyou', 'nye', 'valentine', 'birthday']
  div
    div(class='achievement achievement-#{card}', ng-if='::profile.achievements.#{card}')
    div(ng-class='::{muted: !profile.achievements.#{card}}')
      h5=env.t(card + 'CardAchievementTitle')
      small(ng-if='::!profile.achievements.#{card}')
        =env.t(card + 'CardAchievementText', {cards: "0"})
      small(ng-if='::profile.achievements.#{card}')
        =env.t(card + 'CardAchievementText', {cards: "{{::profile.achievements." + card + "}}"})
    hr
