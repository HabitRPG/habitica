        span=env.t('groupBenefitClaimTaskDescription')
      div
        h3
          span.glyphicon.glyphicon-ok-circle(style='margin-right: 1.5rem;')
          =env.t('groupBenefitMarkTasksTitle')
        span=env.t('groupBenefitMarkTasksDescription')
      div
        h3
          span.glyphicon.glyphicon-ok-circle(style='margin-right: 1.5rem;')
          =env.t('groupBenefitChatPrivatelyTitle')
        span=env.t('groupBenefitChatPrivatelyDescription')
      div
        h3
          span.glyphicon.glyphicon-ok-circle(style='margin-right: 1.5rem;')
          =env.t('groupBenefitGroupManagersTitle')
        span=env.t('groupBenefitGroupManagersDescription')
      div
        h3
          span.glyphicon.glyphicon-ok-circle(style='margin-right: 1.5rem;')
          =env.t('groupBenefitFreeSubscriptionTitle')
