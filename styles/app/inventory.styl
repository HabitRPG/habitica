.gem-wallet
  cursor: pointer
  .tile
    background-color: darken($neutral, 10%)
  .add-gems-btn
    opacity: 0
  &:hover, &:focus
    .add-gems-btn
      opacity: 1
      background-color: $good
    .tile
      opacity: 1


